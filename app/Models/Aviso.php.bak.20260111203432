<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Factories\HasFactory;
use Illuminate\Database\Eloquent\Model;
use Illuminate\Database\Eloquent\Relations\BelongsTo;
use Illuminate\Database\Eloquent\Relations\BelongsToMany;
use Illuminate\Database\Eloquent\Relations\HasMany;
use Illuminate\Support\Carbon;

class Aviso extends Model
{
    use HasFactory;

    protected $table = 'avisos';

    protected $fillable = [
        'titulo',
        'descricao',
        'categoria_id',
        'prioridade',
        'status',
        'data_inicio',
        'data_fim',
        'destaque',
        'criado_por',
    ];

    protected $casts = [
        'data_inicio' => 'datetime',
        'data_fim' => 'datetime',
        'destaque' => 'boolean',
    ];

    public function categoria(): BelongsTo
    {
        return $this->belongsTo(CategoriaAviso::class, 'categoria_id');
    }

    public function autor(): BelongsTo
    {
        return $this->belongsTo(User::class, 'criado_por');
    }

    public function leituras(): HasMany
    {
        return $this->hasMany(AvisoLido::class, 'aviso_id');
    }

    public function usuariosLidos(): BelongsToMany
    {
        return $this->belongsToMany(User::class, 'avisos_lidos', 'aviso_id', 'usuario_id')
            ->withPivot('lido_em');
    }

    public function isAtivo(): bool
    {
        if (($this->status ?? 'inativo') !== 'ativo') {
            return false;
        }

        $now = now();

        if ($this->data_inicio instanceof Carbon && $this->data_inicio->gt($now)) {
            return false;
        }

        if ($this->data_fim instanceof Carbon && $this->data_fim->lt($now)) {
            return false;
        }

        return true;
    }

    public function getPrioridadeLabel(): string
    {
        return match ($this->prioridade) {
            'urgente' => 'Urgente',
            'alta' => 'Alta',
            'media' => 'MÃ©dia',
            default => 'Baixa',
        };
    }
}
