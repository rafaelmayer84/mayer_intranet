@extends('layouts.app')

@section('title', ($mode ?? 'create') === 'edit' ? 'Editar Aviso' : 'Novo Aviso')

@section('content')
<div class="space-y-6">
    <div class="flex items-center justify-between gap-3">
        <div>
            <h1 class="text-2xl font-semibold">
                {{ ($mode ?? 'create') === 'edit' ? 'Editar Aviso' : 'Novo Aviso' }}
