<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
  function loadChartJsIfNeeded(callback) {
    if (typeof Chart !== 'undefined') {
      callback();
    } else {
      var s = document.createElement('script');
      s.src = 'https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js';
      s.onload = callback;
      document.head.appendChild(s);
    }
  }
  function init(){
    loadChartJsIfNeeded(function(){
      if (typeof Chart === 'undefined') {
        console.warn('[ClientesMercado] Chart.js indisponÃ­vel. GrÃ¡ficos nÃ£o serÃ£o renderizados.');
        return;
      }
      const ativosPorMes = @json($data['charts']['ativos_por_mes'] ?? []);
      const procPorStatus = @json($data['charts']['processos_por_status'] ?? []);
      
      // Empty states
      if (!ativosPorMes.length) document.getElementById('emptyAtivosPorMes')?.classList.remove('hidden');
      if (!procPorStatus.length) document.getElementById('emptyProcPorStatus')?.classList.remove('hidden');
      
      // Ativos por mÃªs
      const ctx1 = document.getElementById('chartAtivosPorMes');
      if (ctx1 && ativosPorMes.length) {
        new Chart(ctx1, {
          type: 'line',
          data: {
            labels: ativosPorMes.map(x => String(x.mes).padStart(2,'0')),
            datasets: [{ label: 'Clientes', data: ativosPorMes.map(x => x.valor), tension: 0.3, borderColor: '#3b82f6', backgroundColor: 'rgba(59, 130, 246, 0.1)' }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: { y: { beginAtZero: true } }
          }
        });
      }
      
      // Processos por status
      const ctx2 = document.getElementById('chartProcessosPorStatus');
      if (ctx2 && procPorStatus.length) {
        new Chart(ctx2, {
          type: 'bar',
          data: {
            labels: procPorStatus.map(x => x.status),
            datasets: [{ label: 'Total', data: procPorStatus.map(x => x.total), backgroundColor: '#10b981' }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: { y: { beginAtZero: true } }
          }
        });
      }
    });
  }
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>

<!-- Filter form submission -->
<script>
  document.getElementById('filter-ano')?.addEventListener('change', function() {
    document.querySelector('form').submit();
  });
  document.getElementById('filter-mes')?.addEventListener('change', function() {
    document.querySelector('form').submit();
  });
</script>
